<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.mjniuz.bido.bidoblinddescriptor.MainActivity" >

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <!--– The other elements. –-->
        <SurfaceView
            android:id="@+id/surfaceView"
            android:orientation="horizontal"
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/descriptorBtn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/surfaceView"
            android:text="Descriptor" />
        <Button
            android:id="@+id/buttonText"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/surfaceView"
            android:layout_below="@+id/descriptorBtn"
            android:text="Read Text" />

        <Button
            android:id="@+id/facBtn"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/descriptorBtn"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="Face" />

        <Button
            android:id="@+id/audioBtn"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_below="@+id/facBtn"
            android:layout_toRightOf="@+id/descriptorBtn"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="Voice Reply" />


        <TextView
            android:id="@+id/tv"
            android:layout_toRightOf="@+id/surfaceView"
            android:layout_below="@+id/audioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5sp"
            android:autoLink="web"
            android:text="
Bido, Blind Descriptor.

Information/tutorial, click
http://bido.xyz

Apps and Concept by
Muhamad Yulianto
mail@mjniuz.com" />

    </RelativeLayout>
</LinearLayout>